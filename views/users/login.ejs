<% layout("/layouts/boilerplate") -%>

    <div class="row mt-3">
        <div class="col-6 offset-3">

            <h1 class="col-8 offset-3">Login Syncora</h1>

            <form action="/login" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">User name</label>
                    <input name="username" type="text" class="form-control" id="username" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
    
                <div class="mb-3">
                    <label for="password" class="form-label">Create Password</label>
                    <input name="password" type="text" class="form-control" id="password" required>
                    <div class="valid-feedback">Nice Password!</div>
                </div>
    
                <button type="submit" class="btn btn-dark mb-3">Log in</button>

                
            </form>

            <a class="col-6" href="/register"><button type="submit" class="btn btn-danger mb-3">New on Syncora?</button></a>

            
        </div>
    </div>